<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ga_frgingresostock"
    android:id="@+id/ga_frg_ingreso_stock"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ga_varstringresostock1"
        style="@style/txtstyle_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lyt_marginBottom"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ga_isedtcodsku"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/input_marginRight"
                android:background="@drawable/outline_textinputedittext"
                android:hint="@string/ga_varstringresostock2"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ga_isedtnombreprod"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/input_marginRight"
                android:background="@drawable/outline_textinputedittext"
                android:hint="@string/ga_varstringresostock3"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/ga_isbtnbuscarprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/containedbutton_orange"
            android:drawableStart="@drawable/ga_iconsearch"
            android:drawablePadding="0dp"
            android:minWidth="46dp"
            android:minHeight="46dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ga_varstringresostock7"
        style="@style/txtstyle_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ga_isedtdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textMultiLine"
            android:layout_marginRight="@dimen/input_marginRight"
            android:background="@drawable/outline_textinputedittext"
            android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ga_varstringresostock4"
        style="@style/txtstyle_content"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/lyt_marginBottom">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ga_isedtcantproding"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginRight="95dp"
                android:background="@drawable/outline_textinputedittext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ga_varstringresostock5"
            android:layout_marginRight="@dimen/txt_marginRigth"
            style="@style/txtstyle_content"/>
        <TextView
            android:id="@+id/ga_istxtstockactual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{stock}"
            style="@style/txtstyle_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <Button
        android:id="@+id/ga_isbtnregistrarstok"
        android:layout_width="@dimen/btn_type04_width"
        android:layout_height="wrap_content"
        android:text="@string/ga_varstringresostock6"
        android:textAllCaps="false"
        android:background="@drawable/containedbutton_cyan"
        style="@style/txtstyle_content"/>

    </LinearLayout>
</LinearLayout>